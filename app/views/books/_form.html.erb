<%= simple_form_for @book, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
  <%= f.input :title %>
  </div>
  <div class="form-group">
  <%= f.input :author %>
  </div>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn btn-default' %>
<% end %>
